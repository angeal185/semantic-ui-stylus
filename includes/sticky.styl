.ui
    &.sticky
        position static
        -webkit-transition none
        transition none
        z-index 800
        &.bound
            position absolute
            left auto
            right auto
        &.fixed
            position fixed
            left auto
            right auto
    &.native
        &.sticky
            position -webkit-sticky
            position -moz-sticky
            position -ms-sticky
            position -o-sticky
            position sticky

.ui.sticky.bound.top,
.ui.sticky.fixed.top
    top 0
    bottom auto

.ui.sticky.bound.bottom,
.ui.sticky.fixed.bottom
    top auto
    bottom 0