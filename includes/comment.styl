.ui
    &.comments
        margin 1.5em 0
        max-width 650px
        font-size 1rem
        &:first-child
            margin-top 0
        &:last-child
            margin-bottom 0
        .comment
            position relative
            background 0 0
            margin .5em 0 0
            padding .5em 0 0
            border none
            border-top none
            line-height 1.2
            &:first-child
                margin-top 0
                padding-top 0
            .comments
                margin 0 0 .5em .5em
                padding 1em 0 1em 1em
                &:before
                    position absolute
                    top 0
                    left 0
                .comment
                    border none
                    border-top none
                    background 0 0
            .avatar
                display block
                width 2.5em
                height auto
                float left
                margin .2em 0 0
            & > .content
                display block
            & > .avatar
                & ~ .content
                    margin-left 3.5em
            .author
                font-size 1em
                color rgba(0, 0, 0, .87)
                font-weight 700
            a
                &.author
                    cursor pointer
                    &:hover
                        color #1e70bf
            .metadata
                display inline-block
                margin-left .5em
                color rgba(0, 0, 0, .4)
                font-size .875em
                & > *
                    display inline-block
                    margin 0 .5em 0 0
                & > :last-child
                    margin-right 0
            .text
                margin .25em 0 .5em
                font-size 1em
                word-wrap break-word
                color rgba(0, 0, 0, .87)
                line-height 1.3
            .actions
                font-size .875em
                a
                    cursor pointer
                    display inline-block
                    margin 0 .75em 0 0
                    color rgba(0, 0, 0, .4)
                    &:last-child
                        margin-right 0
            .reply
                &.form
                    width 100%
                    margin-top 1em
        & > .reply
            &.form
                margin-top 1em
        .reply
            &.form
                textarea
                    font-size 1em
                    height 12em
    &.threaded
        &.comments
            .comment
                .comments
                    margin -1.5em 0 -1em 1.25em
                    padding 3em 0 2em 2.25em
                    box-shadow -1px 0 0 rgba(34, 36, 38, .15)
    &.minimal
        &.comments
            .comment
                .actions
                    opacity 0
                    position absolute
                    top 0
                    right 0
                    left auto
                    -webkit-transition opacity .2s ease
                    transition opacity .2s ease
                    -webkit-transition-delay .1s
                    transition-delay .1s
                & > .content
                    &:hover
                        & > .actions
                            opacity 1
    &.mini
        &.comments
            font-size .78571429rem
    &.tiny
        &.comments
            font-size .85714286rem
    &.small
        &.comments
            font-size .92857143rem
    &.large
        &.comments
            font-size 1.14285714rem
    &.big
        &.comments
            font-size 1.28571429rem
    &.huge
        &.comments
            font-size 1.42857143rem
    &.massive
        &.comments
            font-size 1.71428571rem

.ui.comments .comment .avatar img,
.ui.comments .comment img.avatar
    display block
    margin 0 auto
    width 100%
    height 100%
    border-radius .25rem

.ui.comments .comment .actions a.active,
.ui.comments .comment .actions a:hover
    color rgba(0, 0, 0, .8)

.ui.collapsed.comments,
.ui.comments .collapsed.comment,
.ui.comments .collapsed.comments
    display none