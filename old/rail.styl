.ui
    &.rail
        position absolute
        top 0
        width 300px
        height 100%
        font-size 1rem
    &.left
        &.rail
            left auto
            right 100%
            padding 0 2rem 0 0
            margin 0 2rem 0 0
        &.internal
            &.rail
                left 0
                right auto
                padding 0 0 0 2rem
                margin 0 0 0 2rem
        &.dividing
            &.rail
                padding 0 2.5rem 0 0
                margin 0 2.5rem 0 0
                border-right 1px solid rgba(34, 36, 38, .15)
    &.right
        &.rail
            left 100%
            right auto
            padding 0 0 0 2rem
            margin 0 0 0 2rem
        &.internal
            &.rail
                left auto
                right 0
                padding 0 2rem 0 0
                margin 0 2rem 0 0
        &.dividing
            &.rail
                border-left 1px solid rgba(34, 36, 38, .15)
                padding 0 0 0 2.5rem
                margin 0 0 0 2.5rem
    &.dividing
        &.rail
            width 302.5px
    &.close
        &.rail
            width calc(300px + 1em)
        &.left
            &.rail
                padding 0 1em 0 0
                margin 0 1em 0 0
        &.right
            &.rail
                padding 0 0 0 1em
                margin 0 0 0 1em
    &.very
        &.close
            &.rail
                width calc(300px + 0.5em)
            &.left
                &.rail
                    padding 0 .5em 0 0
                    margin 0 .5em 0 0
            &.right
                &.rail
                    padding 0 0 0 .5em
                    margin 0 0 0 .5em
    &.mini
        &.rail
            font-size .78571429rem
    &.tiny
        &.rail
            font-size .85714286rem
    &.small
        &.rail
            font-size .92857143rem
    &.large
        &.rail
            font-size 1.14285714rem
    &.big
        &.rail
            font-size 1.28571429rem
    &.huge
        &.rail
            font-size 1.42857143rem
    &.massive
        &.rail
            font-size 1.71428571rem

.ui.attached.left.rail,
.ui.attached.right.rail
    padding 0
    margin 0