.ui
    &.progress
        position relative
        display block
        max-width 100%
        border none
        margin 1em 0 2.5em
        box-shadow none
        background rgba(0, 0, 0, .1)
        padding 0
        border-radius .28571429rem
        font-size 1rem
        &:first-child
            margin 0 0 2.5em
        &:last-child
            margin 0 0 1.5em
        .bar
            display block
            line-height 1
            position relative
            width 0
            min-width 2em
            background #888
            border-radius .28571429rem
            -webkit-transition width .1s ease, background-color .1s ease
            transition width .1s ease, background-color .1s ease
            height 1.75em
            & > .progress
                white-space nowrap
                position absolute
                width auto
                font-size .92857143em
                top 50%
                right .5em
                left auto
                bottom auto
                color rgba(255, 255, 255, .7)
                text-shadow none
                margin-top -.5em
                font-weight 700
                text-align left
        & > .label
            position absolute
            width 100%
            font-size 1em
            top 100%
            right auto
            left 0
            bottom auto
            color rgba(0, 0, 0, .87)
            font-weight 700
            text-shadow none
            margin-top .2em
            text-align center
            -webkit-transition color .4s ease
            transition color .4s ease
        &.success
            .bar
                background-color #21BA45!important
            & > .label
                color #1A531B
        &.warning
            .bar
                background-color #F2C037!important
            & > .label
                color #794B02
        &.error
            .bar
                background-color #DB2828!important
            & > .label
                color #912D2B
        &.attached
            background 0 0
            position relative
            border none
            margin 0
            .bar
                border-radius 0
        &.top
            &.attached
                .bar
                    border-radius 0
    &.indicating
        &.progress[data-percent^="3"]
            .bar
                background-color #EFBC72
        &.progress[data-percent^="6"]
            .bar
                background-color #DDC928
        &.progress
            &.success
                .label
                    color #1A531B
    &.active
        &.progress
            .bar
                position relative
                min-width 2em
                &::after
                    content ''
                    opacity 0
                    position absolute
                    top 0
                    left 0
                    right 0
                    bottom 0
                    background #FFF
                    border-radius .28571429rem
                    -webkit-animation progress-active 2s ease infinite
                    animation progress-active 2s ease infinite
    &.disabled
        &.progress
            opacity .35
    &.inverted
        &.progress
            background rgba(255, 255, 255, .08)
            border none
            .bar
                background #888
                & > .progress
                    color #F9FAFB
            & > .label
                color #FFF
            &.success
                & > .label
                    color #21BA45
            &.warning
                & > .label
                    color #F2C037
            &.error
                & > .label
                    color #DB2828
    &.red
        &.progress
            .bar
                background-color #DB2828
        &.inverted
            &.progress
                .bar
                    background-color #FF695E
    &.orange
        &.progress
            .bar
                background-color #F2711C
        &.inverted
            &.progress
                .bar
                    background-color #FF851B
    &.yellow
