    &.tiny
        &.progress
            font-size .85714286rem
            .bar
                height .5em
    &.small
        &.progress
            font-size .92857143rem
            .bar
                height 1em
    &.large
        &.progress
            font-size 1.14285714rem
            .bar
                height 2.5em
    &.big
        &.progress
            font-size 1.28571429rem
            .bar
